<div class="page-header">
  <h1>Add a New Course</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/courses", "method" => "post"  %>


      <div class="form-group">
        <%= label_tag "dept", "What department is the class in?" %>
        <%= select_tag "dept", options_from_collection_for_select(Course.select("dept").uniq, "id", "dept"), "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "course_no", "Class Number" %>
        <%= text_field_tag "course_no", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "course_name", "Class Name" %>
        <%= text_field_tag "course_name", "", "class" => "form-control" %>
      </div>


      <%= submit_tag "Add This Class", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/courses" %>

    </form>
</div>
</div>
