<font face="verdana"><font color= purple>
<% the_id = params["id"] %>
<% the_professor = Professor.read(the_id) %>
<% reviews = Rating.where("professor_id" => the_professor["id"]) %>
<% avgrating = Rating.where("professor_id" => the_professor["id"]).average("rating") %>

<h1><%= the_professor["pfirst_name"]%> <%= the_professor["plast_name"]%></h1>
</font>

<font color = black>
<table>
<style>
table,th,td
{
border:1px solid #C0C0C0;
border-collapse:collapse
}
</style>
<table style="width:600px">

<% all_reviews = Rating.where("professor_id" => the_professor["id"]) %>

  <thead>
  <tr>
    <th> Class taught </th>
    <th> How likely would you be to recommend this class (1-10)? </th>
  </tr>
  </thead>
  <tbody>
<% all_reviews.each do |feedback| %>
  <tr>
    <% name = feedback["course_name"] %>
    <% avgrating = Rating.where("course_id" => name["id"]).average("rating") %>
    <td> <%= name %> </td>
    <td> <%= avgrating %> </td>
  </tr>
<% end %>
</tbody>
</table>
</style>

<br>

</font>

