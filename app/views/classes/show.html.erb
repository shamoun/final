<font face="verdana"><font color= purple>
<% the_id = params["id"] %>
<% the_course = Course.read(the_id) %>
<% reviews = Rating.where("course" => the_course["course_name"]) %>
<% avgrating = Rating.where("course" => the_course["course_name"]).average("rating") %>

<h2><%= the_course["course_name"] %></h2>
</font>

<font color = black>
<table>
<style>
table,th,td
{
border:1px solid #C0C0C0;
border-collapse:collapse
}
</style>
<table style="width:600px">

<% all_reviews = Rating.where("course" => the_course["course_name"]) %>

  <thead>
  <tr>
    <th> Professor </th>
    <th> How likely would you be to recommend this class (1-10) </th>
    <th> Qualitative feedback </th>
  </tr>
  </thead>
  <tbody>
<% all_reviews.each do |feedback| %>
  <tr>
    <% name = feedback["course_name"] %>
    <% avgrating = Rating.where("course" => name).average("rating") %>
    <td width=200> <%= feedback["professor_fn"] %> <%= feedback["professor_ln"] %> </td>
    <td width=200> <%= avgrating %> </td>
    <td width=200> <li><%= feedback["feedback"] %> </li></td>
  </tr>
<% end %>
</tbody>
</table>
</style>

<br>

</font>
