<h2> <font face="verdana" color=purple>Class overview</font> </h2>

<table>
<style>
table,th,td
{
border:1px solid #C0C0C0;
border-collapse:collapse
}
</style>
<table style="width:600px">

<% all_classes = Class.group("dept").order("class_no desc") %>
  <thead>
  <tr>
    <th> Department </th>
    <th> Class Number </th>
    <th> Class name </th>
    <th> Average Rating </th>
  </tr>
  </thead>
  <tbody>

<% all_classes.each do |zebra| %>

  <tr>
    <% name = zebra["class_name"] %>
    <% id = name["id"] %>
    <% avgrating = Rating.where("class_id" => id).average("rating") %>
    <td><%= zebra["dept"] %></td>
    <td><%= zebra["class_no"] %></td>
    <td><%= link_to name, "/classes/#{zebra["id"]}" %></td>
    <td><%= avgrating %></td>

  </tr>
<% end %>
</tbody>
</table>
</style>
</table>
